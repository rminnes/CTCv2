@model CTCv2.Models.ViewModels.Himu.BlogVM
<div id="a-@Model.MenuTitle.Replace(" ", string.Empty)"></div>
<section id="blog">
    <div class="container">
        <div class="row text-center clearfix">
            <div class="col-sm-8 col-sm-offset-2">
                <h2 class="title-one">@Model.Title</h2>
                <p class="blog-heading">@Model.Text</p>
            </div>
        </div>
        <div class="row">


            @foreach (var blog in Model.BlogItems)
            {
                <div class="col-sm-4">
                    <div class="single-blog">
                        <img src="@blog.Image" alt="" width="310" height="203" />
                        <div class="pad15">
                            <h2>@blog.Title</h2>
                            <ul class="post-meta">
                                <li><i class=""></i><strong> Job Title :</strong> Exective Producer</li>
                            </ul>
                            <div class="blog-content">
                                @Html.Raw(blog.Text)
                            </div>
                            <a href="" class="btn btn-primary" data-toggle="modal" data-target="#blog-@blog.Order">Read More</a>
                        </div>
     
                    </div>
                    <div class="modal fade" id="blog-@blog.Order" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h2>@blog.Title</h2>
                                    <p>Job title</p>
                                    <img src="@blog.Image" alt="" />
                                    <br />
                                    @Html.Raw(blog.FullText)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }






