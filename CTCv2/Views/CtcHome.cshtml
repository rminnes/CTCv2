         @{Html.RenderPartial("Home/HomeImageRightTextLeft"); }
         <!-- /.content-section-a -->
        @{Html.RenderPartial("Home/HomeImageLeftTextRight"); }
         <!-- /.content-section-b -->
         @{Html.RenderPartial("Home/HomeImageRightTextLeft"); }
         <!-- /.content-section-a -->
         <a name="contact"></a>
         @{Html.RenderPartial("Home/HomeConnect"); }*@
    <!-- /.banner -->
    <!-- Footer -->
    @{Html.RenderPartial("Home/HomeFooter", Model); }
