@inherits Umbraco.Web.Mvc.UmbracoViewPage<IPublishedContent>

<style>

.banner {
    padding: 100px 0;
    color: #f8f8f8;
    background: url(@Umbraco.Media(Model.GetPropertyValue("bannerImage")).Url) no-repeat center center;
    background-size: cover;

}
</style>


<a name="@Model.GetPropertyValue("menuTitle")"></a>
		<div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2>@Model.GetPropertyValue("text")</h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        @if (@Model.GetPropertyValue("facebook") != "")
                        {
                            <li>
                                <a href="@Model.GetPropertyValue("facebook")" class="btn btn-default btn-lg" target="_blank"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Facebook</span></a>
                            </li>
                        }
                       @if (@Model.GetPropertyValue("twitter") != "")
                        {
                        <li>
                            <a href="@Model.GetPropertyValue("twitter")" class="btn btn-default btn-lg" target="_blank"><i class="fa fa-github fa-fw"></i> <span class="network-name">Twitter</span></a>
                        </li>
                       }
                       @if (@Model.GetPropertyValue("instagram") != "")
                        {
                        <li>
                            <a href="@Model.GetPropertyValue("instagram")" class="btn btn-default btn-lg" target="_blank"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">Instagram</span></a>
                        </li>
                       }
                    </ul>
                </div>

            </div>
        </div>
        <!-- /.container -->
    </div>